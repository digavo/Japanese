<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                android:bottom="0dp"
                android:left="-5dp"
                android:right="-5dp"
                android:top="-5dp">
                <shape android:shape="rectangle">
                    <solid android:color="?android:colorBackground"/>
                    <stroke
                        android:width="4dp"
                        android:color="?attr/colorAccent" />

                </shape>
            </item>

        </layer-list>
    </item>

</selector>
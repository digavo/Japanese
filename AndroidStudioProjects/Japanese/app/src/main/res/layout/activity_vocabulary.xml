<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.digavo.japanese.MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:isScrollContainer="true"
            android:stretchColumns="0,1,2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btTest"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Test"
                    android:text="@string/vocabularyTest"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Cards"
                    android:text="@string/vocabularyCards"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textStyle="bold" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vocabularyTitle1"
                android:textAlignment="center"
                android:textColor="@android:color/secondary_text_dark" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <Button
                    android:id="@+id/bt3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Basic"
                    android:text="@string/vocBasics"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Adjectives"
                    android:text="@string/vocAdjectives"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Verbs"
                    android:text="@string/vocVerbs"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btB1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Expressions"
                    android:text="@string/vocExpressions"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btB2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Numbers"
                    android:text="@string/vocNumbers"
                    android:textAlignment="center"

                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btB3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Time"
                    android:text="@string/vocTime"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btB4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Colors"
                    android:text="@string/vocColors"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btB5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Directions"
                    android:text="@string/vocDirections"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btB6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Weather"
                    android:text="@string/vocWeather"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="@string/vocabularyTitle2"
                android:textAlignment="center"
                android:textColor="@android:color/secondary_text_dark" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btL1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Places"
                    android:text="@string/vocPlaces"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btL2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Countries"
                    android:text="@string/vocCountries"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btL3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vocabularyTitle3"
                android:textAlignment="center"
                android:textColor="@android:color/secondary_text_dark" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btT1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Home"
                    android:text="@string/vocHome"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btT2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="School"
                    android:text="@string/vocSchool"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btT3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Things"
                    android:text="@string/vocOther"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vocabularyTitle4"
                android:textAlignment="center"
                android:textColor="@android:color/secondary_text_dark" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btP1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="People"
                    android:text="@string/vocPeople"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btP2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Family"
                    android:text="@string/vocFamily"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btP3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Body"
                    android:text="@string/vocBody"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vocabularyTitle5"
                android:textAlignment="center"
                android:textColor="@android:color/secondary_text_dark" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btLf1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Animals"
                    android:text="@string/vocAnimals"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btLf2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:tag="Plants"
                    android:text="@string/vocPlants"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btLf3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>

